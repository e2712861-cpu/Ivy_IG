  <!-- ✅ 送出事件後再跳轉（避免 GA4 收不到） -->
  <script>
    const lineBtn = document.getElementById('lineBtn');
    lineBtn.addEventListener('click', function (e) {
      e.preventDefault();
      const targetUrl = lineBtn.href;
      let jumped = false;
      const go = () => { if (!jumped) { jumped = true; window.location.href = targetUrl; } };

      try {
        gtag('event', 'click_line', {
          designer: 'Ivy',
          link_text: '加入 LINE 諮詢',
          transport_type: 'beacon',
          event_callback: go
        });
        setTimeout(go, 400);
      } catch (err) {
        go();
      }
    });
  </script>

